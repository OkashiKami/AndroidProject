<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ss_layout"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/default_Primary">


    <TextView
        android:id="@+id/ss_tv_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/app_name"
        android:textSize="50sp"
        android:textColor="@color/default_TextColor"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="17dp" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="230dp"
        android:layout_height="230dp"
        android:src="@mipmap/ic_launcher"
        android:background="@drawable/loading_splash"
        android:layout_marginTop="59dp"
        android:id="@+id/circleImageView"
        android:layout_alignTop="@+id/ss_tv_1"
        android:layout_centerHorizontal="true" />

    <ProgressBar
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/progressBar"
        android:layout_marginBottom="79dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:foregroundTint="@color/default_Accent" />
</RelativeLayout>