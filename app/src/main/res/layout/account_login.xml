<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">
            <TextView android:id="@+id/error"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#ff0000"/>
            <EditText android:id="@+id/username"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:hint="Username (Required)"
                android:text=""
                android:textColor="@color/default_TextColor"
                android:textColorHint="@color/default_TextHintColor"
                android:textAlignment="center"
                android:inputType="textEmailAddress"/>
            <EditText android:id="@+id/password"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:hint="Password (Required)"
                android:text=""
                android:textColor="@color/default_TextColor"
                android:textColorHint="@color/default_TextHintColor"
                android:textAlignment="center"
                android:inputType="textPassword"/>
            <Switch android:id="@+id/rememberme"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="Remember Me"
                android:visibility="gone"
                android:textColor="@color/default_TextColor"
                android:textStyle="bold"
                android:textSize="20sp"
                android:textAlignment="center" />
        </LinearLayout>
    </ScrollView>
    <Button android:id="@+id/submit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerInParent="true"
        android:layout_above="@+id/noaccount"
        android:layout_marginBottom="10dp"
        android:text="Login"
        android:background="#00000000"
        android:textColor="@color/default_TextColor"
        android:textStyle="bold" />
    <Button android:id="@+id/noaccount"
        android:layout_width="wrap_content"
        android:layout_height="20sp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:text="Register for account"
        android:background="#00000000"
        android:textColor="@color/default_TextColor"
        android:textAllCaps="false"
        android:layout_marginBottom="10dp"/>
</RelativeLayout>