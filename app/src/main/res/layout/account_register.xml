<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="fill_parent">



        <RelativeLayout
            android:id="@+id/layout_a"
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:padding="16dp">
            <TextView android:id="@+id/error"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#ff0000"/>
            <EditText android:id="@+id/fullname"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:hint="First Name"
                android:text=""
                android:imeOptions="actionNext"
                android:layout_below="@+id/error"
                android:textColor="@color/default_TextColor"
                android:textColorHint="@color/default_TextHintColor"
                android:textAlignment="center" />
            <EditText android:id="@+id/username"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:hint="Username"
                android:text=""
                android:imeOptions="actionNext"
                android:layout_below="@+id/fullname"
                android:textColor="@color/default_TextColor"
                android:textColorHint="@color/default_TextHintColor"
                android:textAlignment="center" />
            <EditText android:id="@+id/email"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:hint="Email (Required)"
                android:text=""
                android:imeOptions="actionNext"
                android:layout_below="@+id/username"
                android:textColor="@color/default_TextColor"
                android:textColorHint="@color/default_TextHintColor"
                android:textAlignment="center" />
            <EditText android:id="@+id/password"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:hint="Password (Required)"
                android:text=""
                android:imeOptions="actionDone"
                android:layout_below="@+id/email"
                android:textColor="@color/default_TextColor"
                android:textColorHint="@color/default_TextHintColor"
                android:textAlignment="center"
                android:inputType="textPassword" />

            <Button android:id="@+id/submit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Register"
                   android:layout_marginTop="400dp"
                android:layout_centerHorizontal="true"
                android:background="#00000000"
                android:textColor="@color/default_TextColor"
                android:textStyle="bold"
                android:layout_marginBottom="16dp"
                android:layout_above="@+id/haveaccount"
                />
            <Button android:id="@+id/haveaccount"
                android:layout_width="wrap_content"
                android:layout_height="20sp"
                android:gravity="center"
                android:layout_centerHorizontal="true"
                android:text="Already have an account"
                android:background="#00000000"
                android:layout_alignParentBottom="true"
                android:textColor="@color/default_TextColor"
                android:textAllCaps="false"
                android:layout_marginBottom="10dp"/>

        </RelativeLayout>





</RelativeLayout>